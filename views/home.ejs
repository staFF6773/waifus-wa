<!DOCTYPE html>
<html lang="es" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="https://i.ibb.co/7X9RcZ4/d9m417i-e16b5388-47e6-4987-be5f-858ae772081f.png"
    type="image/x-icon">
  <title>Waifus-Wa - Galeria</title>

  <!-- Incluir Tailwind CSS desde el CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: { "50": "#eff6ff", "100": "#dbeafe", "200": "#bfdbfe", "300": "#93c5fd", "400": "#60a5fa", "500": "#3b82f6", "600": "#2563eb", "700": "#1d4ed8", "800": "#1e40af", "900": "#1e3a8a", "950": "#172554" }
          }
        },
        fontFamily: {
          'body': [
            'Inter',
            'ui-sans-serif',
            'system-ui',
            '-apple-system',
            'system-ui',
            'Segoe UI',
            'Roboto',
            'Helvetica Neue',
            'Arial',
            'Noto Sans',
            'sans-serif',
            'Apple Color Emoji',
            'Segoe UI Emoji',
            'Segoe UI Symbol',
            'Noto Color Emoji'
          ],
          'sans': [
            'Inter',
            'ui-sans-serif',
            'system-ui',
            '-apple-system',
            'system-ui',
            'Segoe UI',
            'Roboto',
            'Helvetica Neue',
            'Arial',
            'Noto Sans',
            'sans-serif',
            'Apple Color Emoji',
            'Segoe UI Emoji',
            'Segoe UI Symbol',
            'Noto Color Emoji'
          ]
        }
      }
    }
  </script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300 font-body">
  <!-- Componente de cabecera -->
  <%- include('components/header.ejs') %>

    <br>
    <!-- Apartado de anuncio -->
    <div class="max-w-3xl mx-auto bg-pink-500 text-white px-6 py-3 rounded-lg shadow-md mb-8">
      <div class="flex items-center justify-center space-x-2">
        <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd"
            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
            clip-rule="evenodd" />
        </svg>
        <p class="text-sm text-center">Sube imágenes apropiadas (sin contenido para adultos) y elige la categoría
          correcta.</p>
      </div>
    </div>


    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

      <% Object.entries(limitedCategories).forEach(([category, waifus])=> { %>
        <div class="mb-12">
          <h2 class="text-3xl font-semibold mb-6 capitalize">
            <%= category %>
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            <% waifus.forEach(waifu=> { %>
              <div
                class="aspect-[3/5] rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <img src="<%= waifu.image %>" alt="<%= waifu.name %>"
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 cursor-pointer"
                  loading="lazy" onclick="openModal('<%= waifu.image %>')">
              </div>
              <% }) %>
          </div>
          <div class="mt-6 text-center">
            <a href="/category/<%= category %>"
              class="inline-block px-6 py-2 bg-pink-500 text-white rounded-md hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:ring-offset-gray-900">
              Ver todas las imágenes de <%= category %>
            </a>
          </div>
        </div>
        <% }) %>
    </main>

    <!-- Componente de pie de página -->
    <%- include('components/footer.ejs') %>

      <!-- Modal -->
      <div id="imageModal"
        class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center p-4 z-50">
        <div class="relative max-w-4xl w-full max-h-[90vh]">
          <!-- Botón de cerrar -->
          <button onclick="closeModal()"
            class="absolute -right-3 -top-3 z-10 bg-pink-500 hover:bg-pink-600 text-white rounded-full p-2 shadow-lg transform transition-transform hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <!-- Contenedor de la imagen -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl overflow-hidden h-full">
            <img id="modalImage" src="" alt="Imagen ampliada" class="w-full h-full max-h-[80vh] object-contain">
          </div>

          <!-- Controles de navegación (opcional) -->
          <div class="flex justify-between items-center mt-4 text-white">
            <button id="prevBtn"
              class="p-2 bg-pink-500/80 hover:bg-pink-600/90 rounded-full transition-transform hover:scale-110 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <span id="imageCounter" class="text-white text-sm bg-black/50 px-3 py-1 rounded-full">0/0</span>
            <button id="nextBtn"
              class="p-2 bg-pink-500/80 hover:bg-pink-600/90 rounded-full transition-transform hover:scale-110 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <script>
        // Variables globales para el modal
        let currentImageIndex = 0;
        let imageSources = [];

        const darkModeToggle = document.getElementById('darkModeToggle');
        const darkModeIconContainer = document.getElementById('darkModeIconContainer');
        const html = document.documentElement;

        // Función para establecer el modo oscuro
        function setDarkMode(isDark) {
          if (isDark) {
            html.classList.add('dark');
            localStorage.setItem('darkMode', 'true');
            if (darkModeIconContainer) darkModeIconContainer.innerHTML = '<i data-lucide="moon" class="h-5 w-5"></i>';
          } else {
            html.classList.remove('dark');
            localStorage.setItem('darkMode', 'false');
            if (darkModeIconContainer) darkModeIconContainer.innerHTML = '<i data-lucide="sun" class="h-5 w-5"></i>';
          }
          if (typeof lucide !== 'undefined') lucide.createIcons();
        }

        // Verificar la preferencia guardada
        if (localStorage.getItem('darkMode') === 'true') {
          setDarkMode(true);
        } else if (localStorage.getItem('darkMode') === 'false') {
          setDarkMode(false);
        } else {
          if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            setDarkMode(true);
          }
        }

        // Cambiar el modo al hacer clic en el botón
        darkModeToggle.addEventListener('click', () => {
          setDarkMode(!html.classList.contains('dark'));
        });

        // Escuchar cambios en la preferencia del sistema
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
          setDarkMode(e.matches);
        });

        // Función para abrir el modal
        // Obtener todas las imágenes de la galería
        function getAllImageSources() {
          const images = [];
          document.querySelectorAll('main img').forEach(img => {
            images.push(img.src);
          });
          return images;
        }

        function openModal(clickedImageSrc) {
          // Obtener todas las imágenes y el índice de la imagen actual
          imageSources = getAllImageSources();
          currentImageIndex = imageSources.indexOf(clickedImageSrc);

          const modal = document.getElementById('imageModal');
          const modalImage = document.getElementById('modalImage');

          // Aplicar transición suave
          modalImage.style.opacity = '0';
          setTimeout(() => {
            modalImage.src = clickedImageSrc;
            modalImage.onload = () => {
              modalImage.style.opacity = '1';
            };
          }, 100);

          modal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }

        // Función para cerrar el modal
        function closeModal() {
          const modal = document.getElementById('imageModal');
          modal.classList.add('hidden');
          document.body.style.overflow = 'auto'; // Restaura el scroll
        }

        // Navegación con teclado
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            closeModal();
          } else if (e.key === 'ArrowLeft') {
            navigateImages(-1);
          } else if (e.key === 'ArrowRight') {
            navigateImages(1);
          }
        });

        // Navegación entre imágenes
        function navigateImages(direction) {
          if (imageSources.length === 0) return;

          currentImageIndex += direction;

          // Circular navigation
          if (currentImageIndex < 0) {
            currentImageIndex = imageSources.length - 1;
          } else if (currentImageIndex >= imageSources.length) {
            currentImageIndex = 0;
          }

          const modalImage = document.getElementById('modalImage');
          modalImage.style.opacity = '0';

          setTimeout(() => {
            modalImage.src = imageSources[currentImageIndex];
            updateImageCounter();
            modalImage.onload = () => {
              modalImage.style.opacity = '1';
            };
          }, 100);
        }

        // Actualizar el contador de imágenes
        function updateImageCounter() {
          const counter = document.getElementById('imageCounter');
          if (counter) {
            counter.textContent = `${currentImageIndex + 1}/${imageSources.length}`;
          }
        }

        // Inicializar eventos de los botones de navegación
        document.addEventListener('DOMContentLoaded', () => {
          const prevBtn = document.getElementById('prevBtn');
          const nextBtn = document.getElementById('nextBtn');

          if (prevBtn && nextBtn) {
            prevBtn.addEventListener('click', () => navigateImages(-1));
            nextBtn.addEventListener('click', () => navigateImages(1));
          }

          // Actualizar contador al abrir el modal
          document.querySelectorAll('main img').forEach((img, index) => {
            img.addEventListener('click', () => {
              setTimeout(updateImageCounter, 100);
            });
          });

          // Inicializar Lucide Icons
          lucide.createIcons();
        });
      </script>
</body>

</html>